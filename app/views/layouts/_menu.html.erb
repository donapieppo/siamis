<header class="navbar navbar-default" role="banner">
<div class="container-fluid">
  <div class="navbar-header">
    <%= link_to image_tag('logo.png', width: @home_header ? 80 : 80), root_path, class: 'navbar-brand navbar-icon is18-icon' %>  
    <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#bs-navbar-collapse">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
  </div><!-- navbar-header -->

  <nav class="collapse navbar-collapse" id="bs-navbar-collapse">
    <ul class="nav navbar-nav navbar-right">
      <%= dropdown_menu fwicon('users') + ' Program' do  %>  
        <%= menu_link 'circle', 'Plenary Sessions', plenaries_path %>  
        <%= menu_link 'circle', 'Minitutorials', minitutorials_path %>
        <%= menu_link 'circle', 'Minisymposia', minisymposia_path %>
        <%= menu_link 'circle', 'Poster Sessions', poster_sessions_path %>
        <%= menu_link 'circle', 'Contributed Presentations', contributed_sessions_path %>
      <% end %>
      <% if current_user %>  
        <%= menu_link 'file', 'Submissions', submissions_path %>
        <% if user_in_scientific_commettee? %>  
          <%= dropdown_menu fwicon('gavel') + ' Commettee' do %>
            <%= menu_link 'gavel', 'Sessions', commettee_conference_sessions_path %>
          <% end %>
        <% end %>
        <% if user_in_organizer_commettee? %>  
          <%= dropdown_menu fwicon('magic') + ' Admin' do %>
            <%= menu_link 'building-o', 'Rooms', rooms_path %>
            <%= menu_link 'users', 'Users', users_path %>
            <%= menu_link 'users', 'Submissions', admin_submissions_path %>
          <% end %>
        <% end %>
        <% unless @conference_registration %>  
          <%= menu_link 'credit-card', 'Registration', new_conference_registration_path %>
        <% end %>
      <% end %>
      <%= logged_user %>
    </ul>
  </nav>
</div><!-- container -->
</header>
