<%= simple_form_for @user do |user| %>  
  <%= user.input :email, disabled: true %>  
  <%= user.input :name %>  
  <%= user.input :surname %>  
  <%= user.input :salutation %>  
  <%= user.input :affiliation %>  
  <%= user.input :country %>  
  <%= user.input :address %>  
  <%= user.input :biography %>  
  <%= user.input :siam %>  
  <%= user.input :siag %>  
  <%= user.input :student %>  
  <%= user.submit 'Submit'%>  
<% end %>

