<header class="navbar navbar-default" role="banner">
<div class="container">
  <div class="navbar-header">
    <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#bs-navbar-collapse">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to image_tag('logo.png', width: @home_header ? 250 : 80), root_path, class: 'navbar-brand navbar-icon' %>  
  </div><!-- navbar-header -->

  <nav class="collapse navbar-collapse" id="bs-navbar-collapse">
    <ul class="nav navbar-nav navbar-right">
      <%= dropdown_menu fwicon('users') + ' Sessions' do  %>  
        <li><%= link_to fwicon('circle') + ' Plenary Sessions', plenaries_path %></li>
        <li><%= link_to fwicon('circle') + ' Minitutorials', minitutorials_path %></li>
        <li><%= link_to fwicon('circle') + ' Minisymposia', minisymposia_path %></li>
        <li><%= link_to fwicon('circle') + ' Poster Sessions', poster_sessions_path %></li>
        <li><%= link_to fwicon('circle') + ' Contributed Presentations', contributed_sessions_path %></li>
      <% end %>
      <li><%= link_to fwicon('file') + ' Submissions', submissions_path %></li>
      <% if current_user %>  
        <% if @registration %>  
          <li><%= link_to fwicon('circle') + ' Your Registration', registration_path(@registration) %></li>
        <% else %>
          <li><%= link_to fwicon('credit-card') + ' Register', new_registration_path %></li>
        <% end %>
      <% end %>
      <%= logged_user %>
    </ul>
  </nav>
</div><!-- container -->
</header>
