<% Schedule.conference_days_array.each do |day| %>
  \siamscheduleday{<%= l day %>}

<% Schedule.day_program(day).each do |schedule| %>
  <% cs = schedule.conference_session %> 

  \siamsessiontitle{<%= cs.code %>}{<%= raw latex_text_clean cs.name %>}

  \noindent\medskip <%= l schedule.start, format: :schedule_day_and_hour %>\\
  \noindent\medskip <%= schedule.room %>

  \medskip

  \noindent\textbf{<%= raw latex_text_clean cs.name %>} 

  \bigskip

  \noindent{<%= raw latex_text_clean cs.description %>} \\

  \begin{flushright}
  \noindent{<%= cs.organizers_label %>: }\\
  <% cs.organizers.each do |o| %>  
    <%= raw latex_text_clean o.user.cn %> {\small{(<%= raw latex_text_clean o.user.affiliation %>)}} \\
  <% end %>
  \end{flushright}

  \begin{multicols}{2}
  <% schedule.presentations.order(:number).each do |presentation| %>  
    <% if ! cs.mono_session? %>  
      \noindent\textbf{<%= l(presentation.start, format: :hour) if presentation.start %>  <%= raw latex_text_clean presentation.name %>} 
    <% end %>

    \smallskip

    \begin{flushright}
    <% presentation.authors.each do |author| %>  
      <%= latex_author(author) %>\\
    <% end %> 
    \end{flushright}
  <% end %>
  \end{multicols}

<% end %>
<% end %>




