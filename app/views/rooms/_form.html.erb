<%= simple_form_for @room do |room| %>  
  <%= room.error_notification %>
  <%= room.input :name %> 
  <%= room.input :capacity %> 
  <%= room.association :building %> 
  <%= room.input :floor, collection: Room.floors, include_blank: false %> 
  <%= room.input :manual_order, collection: (1 .. Room.count) %>  
  <%= room.submit %>  
<% end %>
