<form class="simple_form form-horizontal">
<label class="col-sm-3 control-label string optional">
  Authors
</label>
<div class="col-sm-9">
  <% @conference_session.presentation.authors.each do |author| %>  
    <dd><%= author %> <%= link_to_delete author_path(author) %>  </dd>
  <% end %>

  <dd><%= link_to icon('plus') + ' add author', new_presentation_author_path(@conference_session.presentation), class: :button %></dd>
</div>
</form>

