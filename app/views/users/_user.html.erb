<% if user.in_scientific_committee? %>  
  <p class="alert alert-warning">Member of Scientific Commettee.</p>
<% end %>
    
<dl class="dl-horizontal">
  <% (@fields || User.safe_fields).each do |field| %>  
    <%= dl_field(user, field) %>  
  <% end %>
  <dt>Home Page</dt>
  <dd><%= link_to(user.web_page, user.web_page) unless user.web_page.blank? %></dd>
  <% if @show_email %>  
    <dt>Contact</dt>
    <dd><%= mail_to user.email, user.email %></dd>
  <% end %>
</dl>

<% if current_user and (user == current_user or user_in_organizer_commettee?) %>  
  <p class="centered">
  <%= link_to_edit2 'modify', [:edit, user] %>  
  </p>
<% end %>

<ul>
  <% if defined?(@user_conference_sessions) and @user_conference_sessions.any? %>  
    <h3>Organizer in</h3>
    <% @user_conference_sessions.each do |conference_session| %>  
      <% conference_session.accepted? or user_in_organizer_commettee? or next %>  
      <li>
        <span class="badge pull-right"><%= conference_session.class_name %></span> 
        "<%= link_to conference_session, conference_session %>"
      </li>
    <% end %>
  <% end %>

  <% if defined?(@user_presentations) and @user_presentations.any? %>  
    <h3>Author in</h3>
    <% @user_presentations.each do |presentation| %>  
      <% presentation.accepted? or user_in_organizer_commettee? or next %>  
      <li>
        <span class="badge pull-right"><%= presentation.parent_class %></span> 
        "<%= link_to presentation, presentation %>"
      </li>
    <% end %>
  <% end %>
</ul>

