<%= simple_form_for [@conference_session, @presentation] do |presentation| %>  
  <%= presentation.input :name %>  
  <%= presentation.input :abstract %>  
  <%= presentation.input :poster, as: :hidden %>  
  <% if (authors = @presentation.authors).size > 0 %>  
    <%= presentation.input :speaker_id, collection: authors, label_method: lambda {|a| a.user.cn}, include_blank: false %>
  <% end %>
  <%= presentation.submit 'Submit' %> - <%= link_to_back presentations_path %>  
<% end %>

<%= javascript_tag do %>  
  var update_wcount = function() {
    var words = $.trim($('#presentation_abstract').val()).split(' ').length;
    $('#wcount').html(words);
  };

  $('#presentation_abstract').keyup( function() {
    update_wcount();
  });

  update_wcount();
<% end %>

