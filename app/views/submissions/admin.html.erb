<div class="container">
<% if @minisymposia %>  
  <h2>Minisymposia Submissions</h2>

  <dl class="admin_list">
    <% @minisymposia.each do |minisymposium| %>  
      <dt><%= link_to minisymposium.name.upcase, minisymposium_path(minisymposium), remote: true %></dt>
      <dd><%= show_roles(minisymposium.organizers) %></dd>
      <dd><small>keywords: <%= minisymposium.all_tags %></small></dd>
      <dd>
        <small>
          <%= icon('star') if @my_ratings.include?(minisymposium.id)  %>  
          <%= minisymposium.presentation_count %> presentations. 
          <%= minisymposium.ratings.count %> ratings.
          Last update: <%= l minisymposium.updated_at %>
        </small>
      </dd>
    <% end %>
  </dl>
<% end %>

<% if @presentations %>  
  <h2>Presentations <small>(unassigned)</small></h2>
<% end %>

<% if @posters %>  
  <h2>Posters <small>(unassigned)</small></h2>
<% end %>
</div>


