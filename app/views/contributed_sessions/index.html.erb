<h1>Contributed Presentations</h1>

<ul class="list-group">
  <% @contributed_sessions.find_each do |contributed_session| %>  
    <li class="list-group-item">
       <%= link_to contributed_session, contributed_session %>
       <span class="pull-right"><%= contributed_session.schedule %></span>
    </li>
  <% end %>
</ul>

<% if user_committee_organizer? %>  
  <p class="centered">
    <%= link_to 'Create Contributed Session', new_contributed_session_path, class: :big_button %>  
  </p>
<% end %>
