<div class="poster_session_panel">
<div class="panel-heading">
  <h2><%= poster_session.name %></h2>
</div>
<div class="panel-body">
  <%= poster_session.description %>  
  <dl class="dl-horizontal">
    <dt>Presentations</dt>
    <% poster_session.presentations.includes(authors: :user).each do |presentation| %>  
      <dd><%= render presentation, one_line: true %></dd>
    <% end %>
  </dl>
</div>
<div class="panel-footer">
  <% if current_user_owns?(poster_session) %>  
    <%= link_to icon('pencil')  + ' edit', [:edit, poster_session], class: :button %>  
    <%= link_to icon('clock-o') + ' schedule', new_conference_session_schedule_path(poster_session), class: :button %>  
  <% end %>
  <% if user_in_organizer_commettee? %>  
    <%= link_to icon('pencil')  + ' manage presentations', manage_presentations_conference_session_path(poster_session), class: :button %>  
  <% end %>
  &nbsp; <span class="pull-right"><%= poster_session.schedule || 'schedule to be decided' %></span>
</div>
</div>

