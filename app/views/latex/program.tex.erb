<% Schedule.conference_days_array.each do |day| %>
\newpage
\begin{center}
  \noindent\textbf{\large <%= l day %>}
  \par\noindent\rule{\textwidth}{0.4pt}
\end{center}

<% Schedule.day_program(day).limit(8).each do |schedule| %>
  <% cs = schedule.conference_session %> 

  \begin{mdframed}[style=program_event, frametitle={\Large <%= schedule.conference_session_code_with_part %> \\ \large <%= l schedule.start, format: :day %> Room: <%= schedule.room %>}]

  \medskip

  \noindent\textit{<%= raw latex_text_clean cs.description %>} 

  \noindent{<%= cs.organizers_label %>: }
  <% cs.organizers.each do |o| %>  
    <%= raw latex_text_clean o.user.cn %> {\small <%= raw latex_text_clean o.user.affiliation %>} 
  <% end %>\\


  <% if ! cs.mono_session? %>  
  <% schedule.presentations.order(:number).each do |presentation| %>  
    \noindent\textbf{<%= l(presentation.start, format: :hour) if presentation.start %>  <%= raw latex_text_clean presentation.name %>} \\
    <% presentation.authors.each do |author| %>  
      \indent <%= raw latex_text_clean author.to_s %> \\
    <% end %> \\
  <% end %>
  <% end %>
  \end{mdframed}


<% end %>
<% end %>




