            <li class="dropdown-header">Users</li>
            <%= menu_link 'users', 'Users', users_path %>
            <%= menu_link 'bullhorn', 'speakers csv', users_path(format: :csv, speakers: true) %>
            <%= menu_link 'certificate', 'Registrations', conference_registrations_path %>
