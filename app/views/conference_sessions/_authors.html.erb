<form class="simple_form form-horizontal">
<div class="form-group string optional">
  <label class="col-sm-3 control-label string optional">
    Authors
  </label>
  <div class="col-sm-9">
    <% @conference_session.presentation.authors.each do |author| %>  
      <%= author %> <%= link_to_delete author_path(author) %> <br/>
    <% end %>
  </div>
</div>
<div class="form-group string optional">
  <div class="col-sm-9 col-sm-offset-3">
    <%= link_to icon('plus') + ' add author', new_presentation_author_path(@conference_session.presentation), class: :button %>
  </div>
</div>
</form>

