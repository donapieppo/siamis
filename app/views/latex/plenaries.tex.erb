<% @plenaries.each do |plenary| %>

%-------------------------------------------------------------------
  \begin{siamplenary}
    \siamplenarydate{<%= raw l plenary.schedules.first.start, format: :schedule_day_and_hour %>}
    \siamplenarytitle{<%= raw latex_text_clean plenary.to_s %>}
    \siamplenaryspeaker{<%= raw plenary.speaker %>}

    <% if plenary.speaker %>
      \siamplenarybiography{<%= raw latex_text_clean plenary.speaker.user.biography %>}{{images/speakers/<%= plenary.speaker.user.email %>}.jpg}
    <% end %>

    \siamplenaryabstract{<%= raw latex_text_clean plenary.description %>}
  \end{siamplenary}
%-------------------------------------------------------------------

<% end %>
