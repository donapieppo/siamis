<h1>Countries Stats</h1>

<table class="table table-striped">
  <% @users.each do |user_count| %>  
    <tr>
      <td><%= user_count[1] %></td>
      <th><%= link_to user_count[0], users_path(country: user_count[0]) %></th>
      <td><%= ISO3166::Country[user_count[0]] %></td>
    </tr>
  <% end %>
</table>


