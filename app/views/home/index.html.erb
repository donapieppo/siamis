<% @home_header = @no_container = true %>

<% cache 'home_page_cache' do %>
    <p class="alert alert-info centered" style="font-size: 120%; ">SIAM-IS18 <br/> 
       is happening in <br/>
       <strong><%= big_icon('bell') %> <%= (Rails.configuration.conference_start_date - Date.today).to_i %> days!</strong>
    </p>
  <div>
    <%= home_section('preliminary_announcement') %>  
    <%= home_section('conference_themes') %>  
    <%= home_section('committees') %>  
    <%= home_section('important_dates') %>  
    <%= home_section('invited') %>  
    <%= home_section('awards') %>  
    <%= home_section('venue') %>  
    <%= home_section('exhibits') %>  
    <%= home_section('sponsors') %>  
  </div>

  <%= javascript_tag do  %>  
    $('.scrollto').on('click', function(event) {
      var url = $(this).attr('href');
      divid = url.substring(url.lastIndexOf('#') + 1);

      if( divid ) {
        event.preventDefault();
        $('html, body').stop().animate({
          scrollTop: ($("#" + divid).offset().top - 70)
        }, 1000);
      }
    });

    $('.link_to_top').on('click', function(event) {
      $('html, body').stop().animate({
        scrollTop: 0
      }, 1000);
    });
  <% end %>
<% end %>
