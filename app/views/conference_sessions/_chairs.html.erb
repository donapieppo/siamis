<form class="simple_form form-horizontal">
<div class="form-group string optional">
  <label class="col-sm-3 control-label string optional">
    <%= @conference_session.organizers_label %>
  </label>
  <div class="col-sm-9">
    <% @conference_session.organizers.each do |organizer| %>  
      <%= organizer %> <%= link_to_delete organizer_path(organizer) %> <br/>
    <% end %>
  </div>
</div>
<div class="form-group string optional">
  <div class="col-sm-9 col-sm-offset-3">
    <%= link_to icon('plus') + ' add Chair', new_conference_session_organizer_path(@conference_session), class: :button %>
  </div>
</div>
</form>


