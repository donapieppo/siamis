<ul class="list-group">
<% conference_sessions.order('schedules.start, conference_sessions.name').each do |conference_session| %>
  <li class="list-group-item">
    <div class="left-code"><%= conference_session.code %></div>
    <div>
      <%= link_to conference_session, conference_session %><br/>
      <small><%= conference_session.organizers_label %>:  <%= show_roles(conference_session.organizers) %></small> 
      <% if conference_session.schedule %>  
        <br/><%= conference_session.schedule %>
    <% end %>
    </div>
  </li>
<% end %>
</ul>


