<% @posters.each do |cs| %>
  <% cs.presentations.order(:number, :name).each do |presentation| %>  
    \siampostertitle{<%= presentation.number %> - <%= raw latex_text_clean presentation.name.upcase %>}
    <%# \siampresentationabstract{<%= raw latex_text_clean presentation.abstract %1>} %>

    \begin{siam_speakers}
      <% (authors = presentation.authors.includes(:user).order('users.surname, users.name')).each do |author| %>  
        \item<%= '[]' unless author.speak %>  <%= latex_user(author.user, author.speak) %>
      <% end %> 
      <% if authors.empty? %>  
        \item[] To be defined
      <% end %>
    \end{siam_speakers}
  <% end %>
<% end %>

