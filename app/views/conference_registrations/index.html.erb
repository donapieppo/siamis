<%= program_title('Conference Registrations', 'euro') %>  

<% tot = 0 %>  

<table class="table table-striped table-condensed">
  <tr>
    <th colspan="2">User</th>
    <th>amount</th>
    <th>payment id</th>
    <th>identification</th>
    <th>verified</th>
    <th>date</th>
    <th>Notes</th>
  </tr>
  <% @conference_registrations.each do |conference_registration| %>  
    <tr>
      <th><%= user_modal_link(conference_registration.user) %></th>
      <td><small><%= conference_registration.user.affiliation %></small></td>
      <% if payment = conference_registration.payment %>  
        <td><%= payment.amount %> &euro;</td>
        <% tot += payment.amount %>  
        <td><%= payment.payment_id %></td>
        <td><%= payment.shop_id %></td>
        <td><%= payment.verified %></td>
        <td><%= l payment.created_at %></td>
        <td>
          <%= l(payment.single_day, format: :day) if payment.single_day %>  
          <%= 'student' if payment.student %>  
        </td>
      <% else %>
        <td colspan="6"> - </td>
      <% end %>
    </tr>
  <% end %>
</table>

<p>Total: <%= tot %> &euro;</p>
