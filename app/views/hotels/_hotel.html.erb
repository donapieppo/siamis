<div class="hotel-panel">
<div class="panel-heading" style='height: 300px; background: url(<%= image_path(hotel.asset_image) %>) no-repeat center top; background-size: cover;'>
  <h3 style="background-color: rgb(255,255,255,0.7); padding: 20px 0;">
    <%= link_to hotel.name, hotel.web_page, target: :new %>
  </h3>
</div>
<div class="panel-body">
  <p><%= icon('map-marker') %>  <%= hotel.address %></p>

  <p><i><%= hotel.description %></i></p>

  <dl class="dl-horizontal">
    <% [:singleprice, :dusprice, :doubleprice].each do |price_type| %>  
      <% hotel.send(price_type) or next %>  
      <dt><%= t I18n.t('activerecord.attributes.hotel.' + price_type.to_s)  %></dt>
      <dd>
      <%= hotel.send(price_type) %> â‚¬ 
      <%= hotel.bb ? '(bed and breakfast)' : '' %>
      <%= hotel.tax ? ' + tax' : '' %>
      </dd>
    <% end %>
  </dl>
</div>
<div class="panel-footer">
  <% if user_in_organizer_committee? %>  
    <p class="centered"><%= link_to_edit [:edit, hotel] %></p>
  <% end %>
</div>
</div>

