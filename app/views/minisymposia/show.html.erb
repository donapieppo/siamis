<h1><%= @minisymposium.name %></h1>

<div class="well">
  <em><%= @minisymposium.description %></em>
  <%= link_to 'edit', edit_minisymposium_path(@minisymposium) if current_user.owns?(@minisymposium) %>
  </p>
</div>

<ul>
  <% @minisymposium.organizers.includes(:user).each do |organizer| %>  
    <li>
      Organizer: <%= show_user(organizer.user) %>
    </li>
  <% end %>
</ul>

<h3>Presentations</h3>
<ul>
  <% @minisymposium.presentations.each do |presentation| %>  
    <li>
      <%= link_to presentation, presentation %><br/>
      by <% presentation.authors.includes(:user).each do |author| %>
        <%= show_user(author.user) %>
      <% end %>
    </li>
  <% end %>
</ul>

<% if current_user.committee_organizer? %>  
  <h3>Ratings</h3>
  <ul>
    <% @minisymposium.ratings.each do |rating| %>  
      <li><%= rating %> (<%= rating.notes %>) </li>
    <% end %>
  </ul>
  <p class="centered">
  <% if rating = current_user.ratings.where(minisymposium: @minisymposium).first %>  
    you rated <strong><%= rating.score %>/5 </strong> this Minisymposium
    <br/> <%= link_to_delete 'delete your rating', ratings_path(rating) %>  
  <% else %>
    <%= link_to icon('star') + ' Rate the presentation', new_minisymposium_rating_path(@minisymposium), class: :big_button %>  
  <% end %>
  </p>
<% end %>

<% if current_user.organizer?(@minisymposium) %>  
  <div>
    <p class="centered">
    <%= link_to 'Add Organizer', new_minisymposium_organizer_path(@minisymposium), class: :big_button %>  
    </p>
    <p class="centered">
    <%= link_to 'Add Presentation', new_minisymposium_presentation_path(@minisymposium), class: :big_button %>  
    </p>
  </div>
<% end %>



