<% @users.keys.sort.each do |initial| %>  
  \bigskip {\Large\textbf{<%= initial %>}} \bigskip
  \begin{description}
    <% @users[initial].keys.sort.each do |user_name| %>  
      \item <%= raw user_name %>: <%= raw @users[initial][user_name].join(', ') %>  
    <% end %>
  \end{description}
<% end %>


