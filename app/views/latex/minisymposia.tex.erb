\part{Abstracts}

\chapter*{Abstracts of Minysimposia Talks}

\begin{multicols}{2}

<% Minisymposium.order(:number).includes(:presentations).limit(30).each do |ms| %>
  <% ms.presentations.each do |presentation| %>  
    \noindent\textbf{<%= ms.code %> Part <%= presentation.part %>}\\
\\  
    \textit{<%= raw presentation.abstract.chomp.gsub(/^\s*[\r\n]$/, '\\').gsub('_', '\_').gsub('&') {'\\&'} %>}\\
\\ 
  <% speaker = presentation.speaker or next %>  
    \myaut{<%= raw (user = speaker.user).cn %>}\\
    \mail{<%= raw user.email.gsub('_', '\_') %>}\\\\
  <% end %>
<% end %>
\end{multicols}

