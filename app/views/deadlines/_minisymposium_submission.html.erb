<% if Deadline.before_minisymposium_proposal? %>  
  <p class="alert alert-warning">
  Minisymposium proposals submission forms will be availabe from 
  <strong><%= l(Deadline.minisymposium_proposal_start, format: :long) %></strong>.
  </p>
<% elsif Deadline.can_propose?(:minisymposium)  %>
  <p class="alert alert-success">
  <strong>Deadline</strong> for submission of <em>minisymposium proposals</em>: <%= l(Deadline.minisymposium_proposal_end) %> <br/>
  <strong>Deadline</strong> for submission of <em>minisymposium speaker abstracts</em>: <%= l(Deadline.minisymposium_abstract_end) %>.<br/>
  </p>
  <% if current_user %>  
    <% unless user_in_organizer_commettee? or controller.controller_name == 'submissions' %>
      <%= link_to 'submission page', submissions_path, class: :button %>  
    <% end %>
  <% else %>
    In order to submit a <em>minisymposium proposals</em>, please <%= login_link %>.
  <% end %>
<% else %>
  <p class="alert alert-warning">
  Please note that the deadline for sending proposals has been expired on <%= l(Deadline.minisymposium_proposal_end) %>.
  </p>
<% end %>
