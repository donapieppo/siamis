<%= simple_form_for @user do |user| %>  
  <%= user.error_notification %>
  <%= user.input :email, disabled: ( ! (@user.new_record? and user_in_organizer_committee?)) %>  
  <%= user.input :name, required: true %>  
  <%= user.input :surname, required: true %>  
  <%= user.input :visible %>  
  <%= user.input :salutation %>  
  <%= user.input :affiliation %>  
  <%= user.input :country %>  
  <%= user.input :address %>  
  <%= user.input :biography %>  
  <%= user.input :web_page, as: :url %>  
  <%= user.input :siam %>  
  <%= user.input :siag %>  
  <%= user.input :student %>  
  <% if user_in_organizer_committee? %>  
    <%= user.input :student_confirmed %>  
    <%= user.input :staff %>  
    <%= user.input :exhibitor %>  
  <% end %>

  <%= user.input :dietary %>  
  <%= user.input :banquet_tickets %>  

  <% if user_in_organizer_committee? %>  
    <%= user.input :student_award %>  
  <% end %>

  <%= user.submit 'Save'%> - <%= link_to_back root_path %>  
<% end %>

<%= javascript_tag do %>  
  $('#user_student').change(function() {
    if ($(this).is(':checked')) {
      alert("In order to register with student rates you will have to send by email, after the payment, a document attesting your status.");
    };
  });
<% end %>
