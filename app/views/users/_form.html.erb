<%= simple_form_for @user do |user| %>  
  <%= user.input :email, disabled: ( ! (@user.new_record? and user_in_organizer_commettee?)) %>  
  <%= user.input :name, required: true %>  
  <%= user.input :surname, required: true %>  
  <%= user.input :salutation %>  
  <%= user.input :affiliation %>  
  <%= user.input :country %>  
  <%= user.input :address %>  
  <%= user.input :biography %>  
  <%= user.input :web_page, as: :url %>  
  <%= user.input :siam %>  
  <%= user.input :siag %>  
  <%= user.input :student %>  
  <%= user.submit 'Save'%>  
<% end %>

