<% @conference_sessions.each do |cs| %>
  \siamsessiontitle{<%= cs.code %>}{<%= raw latex_text_clean cs.name %>}

  <% cs.schedules.order(:start).each do |schedule| %>
    \siamschedule{<%= "#{cs.code}-#{schedule.part}" %>}{<%= l schedule.start, format: :schedule_day_and_hour %>}{<%= schedule.room %>}

    \begin{multicols}{2}
    <% schedule.presentations.each do |presentation| %>  

      \siampresentationtitle{<%= raw latex_text_clean presentation.name %>}

      \siampresentationabstract{<%= raw latex_text_clean presentation.abstract %>}

      \begin{flushright}
        <% presentation.authors.each do |author| %>  
          <%= latex_author(author) %>\\

        <% end %>
      \end{flushright}
    <% end %>
    \end{multicols}
  <% end %>
<% end %>

