<h1>Countries Stats</h1>

<p class="alert alert-warning">
  <strong>Warning:</strong> here you find ALL users registered, included authors of presentations that are not speakers.
</p>

<table class="table table-striped">
  <tr>
    <th>accounts</th>
    <th>organizers</th>
    <th>speakers</th>
    <th colspan="2">country</th>
  </tr>
  <% @users.each do |user_count| %>  
    <% (count = user_count[1].to_i) > 0 or next %>  
    <% country = user_count[0] %>  
    <tr>
      <td><%= count %></td>
      <td><%= @organizers[country] %>  
      <td><%= @speakers[country] %>  
      <th><%= link_to country, users_path(country: country) %></th>
      <td><%= ISO3166::Country[country] %></td>
    </tr>
  <% end %>
</table>


